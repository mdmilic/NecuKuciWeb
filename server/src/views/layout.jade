doctype default
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="")
    meta(name="author", content="")
    title=appTitle
    //Bootstrap core CSS. If no theme is passed in, we'll default to the theme called 'flatly'.
    - var setTheme = theme
    if setTheme
      link(href="/static/bootstrap/css/theme/" + setTheme + "/bootstrap.css", rel="stylesheet")
    else
      link(href="/static/bootstrap/css/theme/flatly/bootstrap.css", rel="stylesheet")
    //Custom styles for this template
    link(href="/static/bootstrap/css/jumbotron-narrow.css", rel="stylesheet")
    link(href="/static/css/styles.css", rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Dancing+Script:700|Merriweather:400i" rel="stylesheet")
    link(href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous" rel="stylesheet")
  body
    block content
    block footer
